#include <stdio.h>

int main() {
    int number;

    // Запрос ввода числа
    printf("Введите целое число: ");
    scanf("%d", &number);

    // Определение четности с использованием оператора %
    int is_even = (number % 2 == 0);

    // Вывод результата
    printf("Число %d является %s\n", number, is_even ? "четным" : "нечетным");

    return 0;
}
